/* pages/order_list/order_list.wxss */
@import "../../css/public.wxss";

.order-list {
  width: 94%;
  background: #fff;
  margin-bottom: 30px;
  height: 170px;
  padding: 3%;
  font-size: 0.8em;
}

.order-list .order-plate {
  width: 82%;
  float: left;
  height: 30px;
}

.order-list .order-status {
  float: right;
  width: 18%;
  text-align: center;
  height: 20px;
  background: #f08519;
  color: #fff;
  font-size: 0.9em;
  margin-top: -10px;
  border-bottom: 10px solid #fff;
}

.order-list .order-detail {
  height: 35px;
  color: #666;
  line-height: 35px;
  width: 100%;
  float: left;
  border-bottom: 1px solid #e5e5e5;
}

.order-list .order-btn {
  float: right;
  border: 1px solid #f08519;
  color: #f08519;
  padding: 5px 20px;
  border-radius: 5px;
  margin-right: 10px;
  margin-top: 5px;
}
