/* pages/car_company/car_company.wxss */
@import "../../css/public.wxss";

.car-container {
  background: #fff;
  width: 100%;
  height: 60px;
  margin: 10px 0;
  line-height: 60px;
}

.car-box {
  border-right: 5px solid #f08519;
  background: #f08519;
  float: left;
  width: 1%;
  height: 10px;
  margin: 25px 10px;
}

.car-img {
  width: 50px;
  height: 35px;
  float: left;
  margin-left: 2%;
  margin-top:10px
}

.car-name {
  float: left;
  font-size: 0.8em;
  margin-left: 5%;
  width: 55%;
}

