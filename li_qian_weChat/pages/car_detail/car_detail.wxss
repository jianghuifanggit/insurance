/* pages/car_detail/car_detail.wxss */
@import "../../css/public.wxss";

.font-title {
  width: 100%;
  height: 40px;
  font-size: 0.9em;
  line-height: 40px;
  padding-left: 20px;
}

.status {
  background: #f08519;
  color: #fff;
  margin-left: 10px;
  height: 15px;
  line-height: 15px;
  float: left;
  margin-top: 10px;
  padding: 3px;
  border-radius: 3px;
  font-size: 0.8em;
}

.car-message {
  font-size: 0.8em;
  width: 100%;
  background: #fff;
  color: #333;
  padding: 10px;
  border-bottom: 1px solid #f5f5f5;
}

.get-message {
  float: right;
  margin-right: 20px;
}

.footer {
  position: absolute;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 10;
  background: #fff;
  height: 50px;
}

.footer .footer-btn {
  width: 90%;
  margin: 5px 5%;
  height: 40px;
  background: #f08519;
  color: #fff;
}
